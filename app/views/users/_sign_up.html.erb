<div class="px-3 ">
  <div class="text-center border-bottom ">
    <h3>Sign up</h3>
  </div>
  <%= form_with url: users_path , class: 'form-horizontal' do %>
    <div class="form-group py-2">
      <%= label_tag :username, "User Name"%>
      <%= text_field_tag :username,"", placeholder: 'Your User Name here', class: 'form-control'%>
    </div>
    <div class="form-group py-2">
      <%= label_tag :password%>
      <%= password_field_tag :password,"",placeholder: 'Your password here', class: 'form-control'%>
    </div>
    <div class="form-group py-2">
      <%= label_tag :password_confirmation%>
      <%= password_field_tag :password_confirmation,"",placeholder: 'Retype Your password here', class: 'form-control'%>
    </div>
    <div class="form-group py-2 w-100 text-center">
      <%= submit_tag "Sign up", class: 'btn btn-info'%>
    </div>
  <%end%>

  <div class="d-flex flex-column align-items-center">
    <p>Or</p>
  </div>
</div>